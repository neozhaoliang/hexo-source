.book-item
    display inline-block
    position relative

    img
        padding 0
        transition all 0.3s ease-out

    &:hover img
        transform scale(1.05)

    .card-content
        padding 10px

        .card-title
            line-height initial
            font-size 0.9em
            white-space normal
            overflow visible

    .card.small
        .card-image
            min-height 70%
            max-height 70%
        .card-content
            max-height 30%

    .external-link
        font-size 1.2em
