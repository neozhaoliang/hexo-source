// 调整hexo默认的代码段（table）样式
figure.highlight
    margin-left 0
    margin-right 0
    overflow auto

    width 100%
    max-width 100%
    white-space pre-wrap // 允许代码换行
    word-wrap break-word // 允许长单词换行
    box-sizing border-box //
    text-align left // 代码靠左对齐

    td
        padding 0

    pre
        margin 0
        overflow auto
    figcaption a
        position absolute
        right 25px
    .gutter
        width 5%
